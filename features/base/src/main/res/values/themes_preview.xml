<resources>

    <style name="PreviewTheme.DevFestNantes" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PreviewWidget.ActionBar</item>
        <item name="android:colorPrimary">@color/candy</item>
        <item name="android:colorPrimaryDark">@color/cherry</item>
        <item name="android:windowBackground">@color/porcelain</item>
        <item name="runtimeTheme">@style/Theme.DevFestNantes</item>
    </style>

    <style name="PreviewTheme.DevFestNantes.About">
        <item name="android:windowBackground">@color/candy</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="runtimeTheme">@style/Theme.DevFestNantes.About</item>
    </style>

    <style name="PreviewTheme.DevFestNantes.Home">
        <item name="android:actionBarSize">104dp</item>
        <item name="android:windowBackground">@color/cloud</item>
        <item name="runtimeTheme">@style/Theme.DevFestNantes.Home</item>
    </style>

