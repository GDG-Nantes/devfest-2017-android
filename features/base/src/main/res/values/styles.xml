<resources>

    <style name="Widget" />

    <style name="Widget.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <style name="ListItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
    </style>

    <style name="ListItem.Small">
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
    </style>

</resources>
