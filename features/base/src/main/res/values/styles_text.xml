<resources>

    <style name="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?attr/colorControlHighlight</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.ListItem" />

    <style name="TextAppearance.ListItem.Title">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextAppearance.ListItem.Subtitle">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Tab">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHighlight">?android:textColorPrimary</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Toolbar" />

    <style name="TextAppearance.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>
